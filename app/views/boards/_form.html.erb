<h1 class="ui horizontal divider header">
  <i class="music note icon"></i>
  <%= @board.id ? 'Edit Billboard' : 'Create Billboard' %>
</h1>
<div class="ui form">

  <%= form_with(model: @board, local: true, class: "ui form") do |f| %>
  <div class="four fields">
    <div class="field">

      <%= f.label :name %>
      <%= f.text_field :name, required: true, autofocus: true %>
      <br />
      <br />
      <%= f.label :description %>
      <%= f.text_field :description %>
      <br />
      <br />
    </div>
  </div>
    <br />
    <br />
    <%= f.submit class:"ui button green" %>
    <br />
    <br />
  <% end %>
</div>

<% if @board.id %>
<%= link_to "Back", board_path(@board), class:"ui button blue" %>
<% else%>
<%= link_to "Back", boards_path, class:"ui button blue" %>
<% end%>