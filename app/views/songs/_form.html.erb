<h1 class="ui horizontal divider header">
    <i class="music note icon"></i>
    <%= @song.id ? 'Edit Song' : 'Create Song' %>
  </h1>
<div class="ui form">
<div class="ui form">

  <%= form_with(model: [@artist, @song], local: true, class: "ui form") do |f| %>
  <div class="four fields">
    <div class="field">
      <%= f.label :song_name %>
      <%= f.text_field :song_name, required: true, autofocus: true %>
      <br />
      <br />
      <% boards = @boards%>
      <% boards.each_with_index do |b, i|%>
      <br />
      <%= f.label(:board_id, boards[i].name) %>
      <%=f.radio_button(:board_id, "#{boards[i].id}") %>
       <br />
      <% end%>
      <br />
      <%= f.label(:board_id, "Remove From All Lists") %>
      <%= f.radio_button(:board_id, '') %>
    </div>
  </div>
    <br />
    <br />
    <%= f.submit class:"ui button green" %>
    <br />
    <br />
  <% end %>
</div>


<% if @song.id %>
  <%= link_to "Back", artist_songs_path(@artist), class:"ui button blue" %>
  <% else%>
  <%= link_to "Back", artist_path(@artist), class:"ui button blue" %>
  <% end%>



